<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:background="#4bb0e8"
                    tools:context="com.example.me.myapplicationzimuntorim.InsideSpesificTime">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="write description on time"
            android:id="@+id/descrip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="10dp"
            android:text="time"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/timeOrder"
            android:layout_below="@+id/descrip"
            android:layout_centerHorizontal="true"/>



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idDescription"
            android:hint="Description"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/timeOrder"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Phone Number"
            android:id="@+id/phoneNum"
            android:layout_below="@+id/idDescription"
            android:layout_marginTop="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:id="@+id/buttonOrder"
            android:layout_below="@+id/phoneNum"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"/>

    </RelativeLayout>
</ScrollView>
